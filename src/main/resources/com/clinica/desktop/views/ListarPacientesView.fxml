                <TableColumn fx:id="colApellidos" text="Apellidos" prefWidth="150"/>
                <TableColumn fx:id="colCI" text="CI" prefWidth="100"/>
                <TableColumn fx:id="colSexo" text="Sexo" prefWidth="80"/>
                <TableColumn fx:id="colContacto" text="TelÃ©fono" prefWidth="120"/>
