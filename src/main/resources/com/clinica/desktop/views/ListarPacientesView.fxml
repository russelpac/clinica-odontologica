<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.clinica.desktop.controllers.ListarPacientesController">

    <top>
        <Label text="Listado de Pacientes"
               style="-fx-font-size: 22px; -fx-padding: 10;"/>
    </top>

    <center>
        <TableView fx:id="tablaPacientes">
            <columns>
                <TableColumn fx:id="colID" text="ID" prefWidth="100"/>
