<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.clinica.desktop.controllers.EditarPacienteController">

    <center>
        <GridPane hgap="15" vgap="12">
            <padding>
                <Insets top="20" right="20" bottom="20" left="20"/>
            </padding>

            <!-- ID -->
            <Label text="ID:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
            <Label fx:id="lblId" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

            <Label text="Nombres:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
            <TextField fx:id="txtNombres" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

            <Label text="Apellidos:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
            <TextField fx:id="txtApellidos" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

            <Label text="CI:" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
            <TextField fx:id="txtCI" GridPane.rowIndex="3" GridPane.columnIndex="1"/>

            <Label text="TelÃ©fono:" GridPane.rowIndex="4" GridPane.columnIndex="0"/>
            <TextField fx:id="txtTelefono" GridPane.rowIndex="4" GridPane.columnIndex="1"/>

            <Label text="Fecha Nacimiento (yyyy-MM-dd):" GridPane.rowIndex="5" GridPane.columnIndex="0"/>
            <TextField fx:id="txtFechaNacimiento" GridPane.rowIndex="5" GridPane.columnIndex="1"/>

            <Label text="Alergias:" GridPane.rowIndex="6" GridPane.columnIndex="0"/>
            <TextField fx:id="txtAlergias" GridPane.rowIndex="6" GridPane.columnIndex="1"/>

            <Label text="Antecedentes:" GridPane.rowIndex="7" GridPane.columnIndex="0"/>
            <TextField fx:id="txtAntecedentes" GridPane.rowIndex="7" GridPane.columnIndex="1"/>

            <Label text="Consultas:" GridPane.rowIndex="8" GridPane.columnIndex="0"/>
            <TextField fx:id="txtConsultas" GridPane.rowIndex="8" GridPane.columnIndex="1"/>

            <Label text="Activo (S/N):" GridPane.rowIndex="9" GridPane.columnIndex="0"/>
            <TextField fx:id="txtActivo" GridPane.rowIndex="9" GridPane.columnIndex="1"/>
        </GridPane>
    </center>

    <bottom>
        <HBox alignment="center" spacing="20">
            <padding>
                <Insets top="15" right="15" bottom="15" left="15"/>
            </padding>

            <Button fx:id="btnGuardar" text="Guardar" onAction="#guardarCambios"/>
            <Button text="Cancelar" onAction="#cancelar"/>
        </HBox>
    </bottom>

</BorderPane>

